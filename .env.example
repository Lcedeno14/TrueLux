# Email Configuration for Contact Form
# Copy this file to .env.local for local development

# Required: Your Resend API Key
# Get it from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Optional: Email address to receive contact form submissions
# Default: jordan@trueluxconstruction.com
CONTACT_EMAIL=jordan@trueluxconstruction.com

# Optional: From email address (requires domain verification in Resend)
# Default: True Lux Construction <onboarding@resend.dev>
FROM_EMAIL=True Lux Construction <noreply@trueluxconstruction.com>

# Email service to use (resend or nodemailer)
# Default: resend
EMAIL_SERVICE=resend
